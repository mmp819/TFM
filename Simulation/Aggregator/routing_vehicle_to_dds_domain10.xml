<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="/opt/rti_connext_dds-7.5.0/resource/schema/rti_routing_service.xsd">

    <!-- Tipos -->
    <types>
        <struct name="VehicleStateType" extensibility="final">
            <member name="vehicle_id" type="string" stringMaxLength="6" key="true"/>
            <member name="timestamp" type="double"/>
            <member name="gps_latitude" type="double"/>
            <member name="gps_longitude" type="double"/>
            <member name="gps_altitude" type="double"/>
            <member name="gps_hdop" type="double"/>
            <member name="gps_pdop" type="double"/>
            <member name="gps_vdop" type="double"/>
            <member name="speed" type="double"/>
        </struct>
    </types>

    <routing_service name="AggregationRouting">
        <annotation>
            <documentation> Enruta el topico VehicleState de todos los dominios 
                del caso de uso hacia el dominio 10.
            </documentation>
        </annotation>
        
        <!-- Monitorizacion -->
        <monitoring>
            <domain_id>11</domain_id>
            <status_publication_period>
                <sec>5</sec>
                <nanosec>0</nanosec>
            </status_publication_period>
            <statistics_sampling_period>
                <sec>1</sec>
                <nanosec>0</nanosec>
            </statistics_sampling_period>
        </monitoring>

        <!-- Rutas -->
        <domain_route name="AggregationDomainRoute1to10">
            <participant name="1">
                <domain_id>1</domain_id>
            </participant>
            <participant name="1to10">
                <domain_id>10</domain_id>
            </participant>
            
            <session name="Session_1">
                <topic_route name="Route1to10" enabled="true">
                    <publish_with_original_info>true</publish_with_original_info>
                    <input participant="1">
                        <topic_name>VehicleState</topic_name>
                        <registered_type_name>VehicleStateType</registered_type_name>
                        <datareader_qos>
                            <reliability>
                                <kind>RELIABLE_RELIABILITY_QOS</kind>
                            </reliability>
                        </datareader_qos>
                    </input>
                    <output participant="1to10">
                        <topic_name>VehicleState</topic_name>
                        <registered_type_name>VehicleStateType</registered_type_name>
                        <datawriter_qos>
                            <reliability>
                                <kind>RELIABLE_RELIABILITY_QOS</kind>
                            </reliability>
                        </datawriter_qos>
                    </output>
                </topic_route>
            </session>
        </domain_route>

        <domain_route name="AggregationDomainRoute2to10">
            <participant name="2">
                <domain_id>2</domain_id>
            </participant>
            <participant name="2to10">
                <domain_id>10</domain_id>
            </participant>
            
            <session name="Session_2">
                <topic_route name="Route2to10" enabled="true">
                    <publish_with_original_info>true</publish_with_original_info>
                    <input participant="2">
                        <topic_name>VehicleState</topic_name>
                        <registered_type_name>VehicleStateType</registered_type_name>
                        <datareader_qos>
                            <reliability>
                                <kind>RELIABLE_RELIABILITY_QOS</kind>
                            </reliability>
                        </datareader_qos>
                    </input>
                    <output participant="2to10">
                        <topic_name>VehicleState</topic_name>
                        <registered_type_name>VehicleStateType</registered_type_name>
                        <datawriter_qos>
                            <reliability>
                                <kind>RELIABLE_RELIABILITY_QOS</kind>
                            </reliability>
                        </datawriter_qos>
                    </output>
                </topic_route>
            </session>
        </domain_route>

        <domain_route name="AggregationDomainRoute3to10">
            <participant name="3">
                <domain_id>3</domain_id>
            </participant>
            <participant name="3to10">
                <domain_id>10</domain_id>
            </participant>
            
            <session name="Session_3">
                <topic_route name="Route3to10" enabled="true">
                    <publish_with_original_info>true</publish_with_original_info>
                    <input participant="3">
                        <topic_name>VehicleState</topic_name>
                        <registered_type_name>VehicleStateType</registered_type_name>
                        <datareader_qos>
                            <reliability>
                                <kind>RELIABLE_RELIABILITY_QOS</kind>
                            </reliability>
                        </datareader_qos>
                    </input>
                    <output participant="3to10">
                        <topic_name>VehicleState</topic_name>
                        <registered_type_name>VehicleStateType</registered_type_name>
                        <datawriter_qos>
                            <reliability>
                                <kind>RELIABLE_RELIABILITY_QOS</kind>
                            </reliability>
                        </datawriter_qos>
                    </output>
                </topic_route>
            </session>
        </domain_route>
    </routing_service>
</dds>
